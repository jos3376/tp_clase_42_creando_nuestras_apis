<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Película</title>
    <link rel='stylesheet' href='/css/movieEdit.css' />
</head>
<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <h1 class="titulo">Editar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/update/<%= movie.id %>" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" value="<%= movie.title %>" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" value="<%= movie.rating %>" required></p>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" value="<%= movie.awards %>" required></p>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" value="<%= movie.release_date %>" required></p>
            <label for="length">Length </label>
            <p><input type="number" name="length" value="<%= movie.length %>" required></p>
            <label for="genreID">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <option value="" disabled selected>- select genre -</option>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <% if (movie.genre_id && movie.genre_id == genre.id) { %>selected<% } %>><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <br>
            <p><button class="botonModificar" type="submit">Modificar</button>
            <a class="botonVolver" href="/movies">Listado de Películas</a></p>
            <% if (errors && errors.length > 0) { %>
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
            <% } %>
        </form>
    </section>
</body>
</html>
